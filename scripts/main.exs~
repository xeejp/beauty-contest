defmodule Beauty.Main do
  alias Beauty.Actions

  @pages ["waiting", "description", "experiment", "result"]

  def pages, do: @pages

  def init do
    %{
      page: "waiting",
      inputs: 0,
      effectives: 0,
      participants: %{},
    }
  end

  def new_participant do
    %{
    	number: 0,
	effective: false,
	inputed: false,
    }
  end

  def join(data, id) do
    unless Map.has_key?(data.participants, id) do
      new = new_participant()
      effectives = get_in(data, [:effectives])

      if data.page == "wating" do
         effectives = effectives + 1
         new = new
	       |>put_in([:effective], true)
      end

      put_in(data, [:participants, id], new)
      |>put_in([:effectives], effectives)
      |> Actions.join(id, new)
    else
      data
    end
  end

  def wrap(data) do
    {:ok, %{"data" => data}}
  end
end
